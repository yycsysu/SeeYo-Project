<% user = User.find(friend.usert_id) %>
<div class="row-fluid" id="user_div<%= user.id %>">
  <div class="col-md-2">
    <%= image_tag("head.jpg") %>
  </div>
  <div class="col-md-6">
    <%= link_to user.information.username, user_path(user) %>
    <p><%= user.information.about %></p>
  </div>
    <% if current_user.id.to_s == params[:user_id] %>
  <div class="col-md-2">
        <%= button_to 'unfollowing', user_friend_path(current_user, user), :method => 'delete', :class => "btn btn-default btn-lg" %>
  </div>
  <div class="col-md-2">
        <%= button_to 'remove follower', user_friend_path(user, current_user), :method => 'delete', :class => "btn btn-default btn-lg" %>
  </div>
    <% end %>
    <hr />
    <hr />
    <hr />
    <hr />
</div>