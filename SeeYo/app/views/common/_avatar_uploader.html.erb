<div class="row">
    <div class="col-md-12" >
      <legend><%= @block_title %></legend>
      <div class="row">
        <div class="col-md-12" id="avatar_div">
          <%= form_for @info, :url => user_path(@user) do |f| %>
          <div class="field">
            <%= f.label "Select local image: " %>
            <%= f.file_field :avatar, :accept => "image/*", :id => "avatar_file_reader", :onchange => "avatar_preview()"%>
            <%= f.hidden_field :avatar_cache %>
            <%= image_tag(@info.avatar_url(:large), :id => "avatar_pre_large", :width => IMG_SIZE_LARGE, :height => IMG_SIZE_LARGE, :class => "img-rounded center-block") %>
            <%= image_tag(@info.avatar_url(:normal), :id => "avatar_pre_normal", :width => IMG_SIZE_NORMAL, :height => IMG_SIZE_NORMAL, :class => "img-rounded center-block") %>
            <%= image_tag(@info.avatar_url(:small), :id => "avatar_pre_small", :width => IMG_SIZE_SMALL, :height => IMG_SIZE_SMALL, :class => "img-rounded center-block" )%>
            <%= f.submit 'Upload',remote: true,  :class => "btn btn-default" %>
          </div>
          <%end%>
        </div>
      </div>
  </div>
</div>