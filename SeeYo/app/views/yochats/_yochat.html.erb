<div class="row-fluid bg-white">
  <div class="col-md-2">
    <%= image_tag("head.jpg") %>
  </div>
  <div class="col-md-10">
    <%= link_to yochat.user.username, '#' %>
    <p><%= yochat.content %></p>
    <p class="text-muted"><%= yochat.updated_at %></p>
    <div class="btn-group btn-group-justified" role="group" aria-label="...">
      <div class="btn-group" role="group">
        <%= button_to 'Comment', yochat_path(yochat), :method => :get, remote: true, :class => "btn btn-default btn-xs" %>
      </div>
      <% if yochat.user.username == @user.username%>
      <div class="btn-group" role="group">
        <button type="submit" class="btn btn-default btn-xs">Delete</button>
      </div>
      <% end %>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default btn-xs">Like <span class="badge"><%= yochat.like %></span></button>
      </div>
    </div>
    <hr />
    <div class="row-fluid">
      <div class="col-md-12" id="comment_submit_div<%= yochat.id %>">
      </div>
    </div>
    <div class="row-fluid">
      <div class="col-md-12" id="comment_show_div<%= yochat.id %>" >
      </div>
    </div>
  </div>
</div>