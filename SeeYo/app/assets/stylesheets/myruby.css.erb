body {
  background-repeat:no-repeat;
  background-attachment:fixed;
  background-position:center;
  background-size: cover;
}

.mytable {
  border-top:2px solid #ddd;
  border-bottom:2px solid #ddd;
  border-collapse:collapse;
  width:100%;
  max-width:100%;
  margin:8px;
}

td {
  padding: 0px 8px;
  height:40px;
  vertical-align: center;
}